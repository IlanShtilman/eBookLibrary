@{
    ViewData["Title"] = "Home";
}
@{
    var username = Context.Session.GetString("Username");
}
@* Section of Header website *@
<div id="header">
    <div class="container">
        <nav>
            <ul id="sideMenu">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="About" asp-action="Index">Profile</a></li>
                <li><a asp-controller="Book" asp-action="Store">Store</a></li>
                <li><a asp-controller="Book" asp-action="ViewBook" id="viewBookNavBtn">View Books</a></li>
                @if (ViewBag.Role == 1)
                {
                    <li><a asp-controller="Book" asp-action="AddBook" id="addBookNavBtn">Add Books</a></li>
                }
            </ul>
            <div class="nav-icons">
                <div class="nav-icons">
                    @if (string.IsNullOrEmpty(username))
                    {
                        <a asp-controller="User" asp-action="Login" class="icon-link">
                            <i class="fa-solid fa-user"></i>
                        </a>
                        <a asp-controller="Wishlist" asp-action="Index" class="icon-link">
                            <i class="fa-solid fa-heart"></i>
                        </a>
                        <a href="#" class="icon-link">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Wishlist" asp-action="Index" class="icon-link">
                            <i class="fa-solid fa-heart"></i>
                        </a>
                        <a href="#" class="icon-link">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </a>
                        <a asp-controller="User" asp-action="Logout" class="icon-link">
                            <i class="fa-solid fa-right-from-bracket"></i>
                        </a>
                    }
                </div>
            </div>
        </nav>
    </div>
</div>

@* Section of Searching and Welcome website *@
<div id="Search">
    <div class="container">
        <img src="~/images/Homepage.png" class="homephoto" alt="Description">
        @if (ViewBag.Username != null)
        {
            <h1>Hello @ViewBag.Username!</h1>
        }
        else
        {
            <h1>Hello There!</h1>
        }
        <p>Welcome to ilan's and ariel's eBook Store! our community's center for lifelong curiosity, learning and reading</p>
        <div class="search-container">
            <input type="text" class="search-bar" placeholder="What would you like to explore today?" aria-label="Search books" />
            <button class="search-button" aria-label="Search">SEARCH</button>
        </div>
    </div>
</div>

