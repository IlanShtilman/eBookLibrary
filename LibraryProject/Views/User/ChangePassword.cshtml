@{
    ViewData["Title"] = "Forgot Password";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/changepassword.css" />
}

<div id="forgot-password-section">
    <div class="container">
        <div class="forgot-password-container">
            <div class="forgot-password-form-container">
                <h2>Forgot Password?</h2>
                <p class="subtitle">Don't worry! Enter your email and we'll send you a temporary password.</p>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <form class="forgot-password-form" method="post" asp-controller="Users" asp-action="ForgotPassword">
                    <div class="form-group">
                        <i class="fas fa-envelope"></i>
                        <input type="email" name="Email" placeholder="Enter your email address" required>
                    </div>

                    <button type="submit" class="submit-btn">Send Recovery Email</button>

                    <div class="back-to-login">
                        <a asp-controller="Users" asp-action="Login">
                            <i class="fas fa-arrow-left"></i> Back to Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>