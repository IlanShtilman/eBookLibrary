@model IEnumerable<dynamic>

<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" rel="stylesheet" />
    <link href="~/css/shoppingCart.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<section>
    <div class="container">
        <h2 class="px-5 p-2">My Shopping Cart</h2>
        <div class="cart">
            <div class="col-md-12 col-lg-10 mx-auto">
                @foreach (var item in Model)
                {
                    <div class="cart-item">
                        <div class="row">
                            <div class="col-md-7 center-item">
                                <h5>@item.Title</h5>
                                <p>by @item.Author</p>
                            </div>

                            <div class="col-md-5 center-item">
                                <div class="input-group number-spinner">
                                    <button id="@item.BookId-minus" class="btn btn-default"><i class="fas fa-minus"></i></button>
                                    <input id="@item.BookId-number" type="number" min="0" class="form-control text-center" value="@item.Quantity">
                                    <button id="@item.BookId-plus" class="btn btn-default"><i class="fas fa-plus"></i></button>
                                </div>
                                <h5>Action: @item.Action</h5>
                                <h5>$ <span id="@item.BookId-total">@item.Price</span></h5>
                                <img src="~/images/remove.png" alt="" class="remove-item">
                            </div>
                        </div>
                    </div>
                }

                <div class="cart-item">
                    <div class="row g-2">
                        <div class="col-6">
                            <h5>Subtotal: </h5>
                            <h5>Tax:</h5>
                            <h5>Total:</h5>
                        </div>

                        <div class="col-6 status">
                            <h5>$<span id="sub-total">@Model.Sum(x => (decimal)x.Price)</span></h5>
                            <h5>$<span id="tax-amount">0</span></h5>
                            <h5>$<span id="total-price">@Model.Sum(x => (decimal)x.Price)</span></h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 pt-4 pb-4">
                    <button type="button" class="btn btn-success check-out">Check Out</button>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/js/app.js"></script>
</body>
</html>