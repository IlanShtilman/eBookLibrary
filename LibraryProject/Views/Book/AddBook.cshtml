@model LibraryProject.Models.Book

@{
    ViewBag.Title = "Add a New Book";
}
<link rel="stylesheet" href="~/css/addBook.css" asp-append-version="true"/>
<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Add New Book</h1>
        <p class="hero-subtitle">Expand your library's collection</p>
    </div>
    <div class="hero-decoration"></div>
</div>

<div class="form-container">
    <form asp-action="AddBook" method="post" id="addBookForm" class="book-form">
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter book title"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Author">Author</label>
                <input asp-for="Author" class="form-control" placeholder="Enter author name"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Genre">Genre</label>
                <select asp-for="Genre" class="form-control">
                    <option value="">Select Genre</option>
                    <option value="Fiction">Fiction</option>
                    <option value="Non-Fiction">Non-Fiction</option>
                    <option value="Science">Science</option>
                    <option value="Technology">Technology</option>
                </select>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AgeRestriction">Age Restriction</label>
                <select asp-for="AgeRestriction" class="form-control">
                    <option value="">Select Age Restriction</option>
                    <option value="All">All</option>
                    <option value="ThreePlus">ThreePlus</option>
                    <option value="SevenPlus">SevenPlus</option>
                    <option value="TwelvePlus">TwelvePlus</option>
                </select>
                <span asp-validation-for="AgeRestriction" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Publisher">Publisher</label>
                <input asp-for="Publisher" class="form-control" placeholder="Enter publisher name"/>
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublishYear">Publish Year</label>
                <input asp-for="PublishYear" class="form-control" type="number" min="1800" max="@DateTime.Now.Year"/>
                <span asp-validation-for="PublishYear" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BuyPrice">Buy Price</label>
                <input asp-for="BuyPrice" class="form-control" type="number" step="0.01" min="0" id="buyPrice"/>
                <span asp-validation-for="BuyPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DiscountedBuyPrice">Discounted Buy Price (Optional)</label>
                <input asp-for="DiscountedBuyPrice" class="form-control" type="number" step="0.01" min="0" id="discountedBuyPrice"/>
                <span asp-validation-for="DiscountedBuyPrice" class="text-danger"></span>
                <small class="text-muted">Leave empty if no discount applies</small>
            </div>

            <div class="form-group">
                <label asp-for="BorrowPrice">Borrow Price</label>
                <input asp-for="BorrowPrice" class="form-control" type="number" step="0.01" min="0"/>
                <span asp-validation-for="BorrowPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl">Book Cover Image URL</label>
                <input asp-for="ImageUrl" class="form-control" type="url" placeholder="Enter image URL"/>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <small class="text-muted">Enter a valid image URL for the book cover</small>
            </div>
        </div>

        <div class="form-options">
            <div class="formats-group">
                <h3>Available Formats</h3>
                <div class="format-options">
                    <div class="format-item">
                        <input asp-for="IsEpubAvailable" class="form-check-input" type="checkbox"/>
                        <label asp-for="IsEpubAvailable">EPUB</label>
                    </div>

                    <div class="format-item">
                        <input asp-for="IsF2bAvailable" class="form-check-input" type="checkbox"/>
                        <label asp-for="IsF2bAvailable">F2B</label>
                    </div>

                    <div class="format-item">
                        <input asp-for="IsMobiAvailable" class="form-check-input" type="checkbox"/>
                        <label asp-for="IsMobiAvailable">MOBI</label>
                    </div>

                    <div class="format-item">
                        <input asp-for="IsPdfAvailable" class="form-check-input" type="checkbox"/>
                        <label asp-for="IsPdfAvailable">PDF</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-btn">Add Book</button>
            <button type="button" class="cancel-btn" onclick="window.history.back()">Cancel</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/addBook.js"></script>
}